{{ define "yield" }}
<h1>Problems #</h1>

<a class="btn btn-default" href="/problems/new">New Problem</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1 text-center">ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  {{ range .Data }}
    <tr>
      <td class="text-center">{{.ID}}</td>
      <td><a href="/problems/{{.ID}}">{{.Name}}</a></td>
    </tr>
  {{ end }}
  </tbody>
</table>
{{ end }}
